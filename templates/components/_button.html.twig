{% if type is not defined or type == 'link' %}
<a href="{{ route }}" class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
    {% if icon is defined %}
        <span class="mr-2"><i class="{{ icon }}"></i></span>
    {% endif %}
    {{ text }}
</a>
{% else %}
<button class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" type="{{ type }}">
    {% if icon is defined %}
        <span class="mr-2"><i class="{{ icon }}"></i></span>
    {% endif %}
    {{ text }}
</button>
{% endif %}